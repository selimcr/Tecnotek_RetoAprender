<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>RetoAprender</title>

    <!-- stylesheets -->
    <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css" media="screen"/>
    <link rel="stylesheet" href="{{ asset('css/slide.css') }}" type="text/css" media="screen"/>
    <link rel="stylesheet" href="{{ asset('css/forms.css') }}" type="text/css" media="screen"/>

    <!--GoogleFonts-->
    <link href='http://fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>

    <!-- jQuery - the core -->
    <script src="{{ asset('js/jquery-1.3.2.min.js') }}" type="text/javascript" charset="utf-8"></script>

    <!-- Sliding effect -->
    <script src="{{ asset('js/slideLogin.js') }}" type="text/javascript" charset="utf-8"></script>

    <!-- Scrollable effect -->
    <script src="{{ asset('js/jquery.tools.min.js') }}" type="text/javascript" charset="utf-8"></script>

    <!-- Menu effect -->
    <script type="text/javascript">
        function mainmenu() {
            $(" #nav ul ").css({display:"none"});
            $(" #nav li").hover(function () {
                $(this).find('ul:first:hidden').css({visibility:"visible", display:"none"}).slideDown(400);
            }, function () {
                $(this).find('ul:first').slideUp(400);
            });
        }
        $(document).ready(function () {
            mainmenu();
        });
    </script>

    <!-- InFieldLabel effect -->
    <script src="{{ asset('js/jquery.infieldlabel.min.js') }}" type="text/javascript" charset="utf-8"></script>

    <script type="text/javascript">
        $(function () {
            $("label").inFieldLabels();
        });
    </script>
    <!--[if lte IE 6]>
    <style type="text/css" media="screen">
