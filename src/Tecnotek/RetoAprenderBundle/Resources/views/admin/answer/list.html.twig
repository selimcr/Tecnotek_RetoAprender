{% extends 'RetoAprenderBundle:admin:layout.html.twig' %}

{% block content %}
    <div id="center-column">
        <div class="top-bar">
            <a href="{{ path('reto_aprender_admin_answer_new') }}" class="button">NUEVO </a>
            <h1>Respuestas</h1>
            <div class="breadcrumbs"><a href="{{ path('reto_aprender_admin') }}">Home</a> / <a href="{{ path('reto_aprender_admin_answer') }}">Respuestas</a></div>
        </div><br /><br />
        <div class="table">
            <img src="{{ asset('admin/img/bg-th-left.gif')}}" width="8" height="7" alt="" class="left" />
            <img src="{{ asset('admin/img/bg-th-right.gif')}}" width="7" height="7" alt="" class="right" />
            <table class="listing" cellpadding="0" cellspacing="0">
                <tr>
                    <th class="first" width="250px">Respuesta</th>
                    <th>Test</th>
                    <th>Pregunta</th>
                    <th></th>
                    <th class="last"></th>
                </tr>
                {% for entity in entities %}
                    <tr {% if loop.index % 2 == 0 %}class="bg"{% endif %}>
                        <td class="first style2">- {{ entity }} </td>
                        <td class="first style2"> {{ entity.question }} </td>
                        <td class="first style2"> {{ entity.question.test }} </td>
                        <td><a href="{{ path('reto_aprender_admin_answer_edit', {'id': entity.id}) }}"><img src="{{ asset('admin/img/edit-icon.gif') }}" width="16" height="16" alt="Editar" /></a></td>
                        <td class="last">
                            <a href="{{ path('reto_aprender_admin_answer_delete', {'id': entity.id}) }}" onclick="return confirm('Esta seguro que desea eliminarlo?');">
                                <img src="{{ asset('admin/img/hr.gif') }}" width="16" height="16" alt="Eliminar" />
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
            <div class="select">
                <strong>Other Pages: </strong>
                <select>
                    <option>1</option>
                </select>
            </div>
        </div>
    </div>
{% endblock %}

