{% extends 'RetoAprenderBundle:admin:layout.html.twig' %}

{% block extracss %}
    <link rel="stylesheet" href="{{ asset('admin/css/jHtmlArea.css') }}" type="text/css" media="all"/>
{% endblock %}

{% block extrajs %}

    <script src="{{ asset('js/tek_reto_admin_info.js') }}" type="text/javascript" charset="utf-8"></script>

    <script type="text/javascript">
        Tecnotek.module = "AdminInfo";
    </script>
{% endblock %}

{% block content %}
    <div id="center-column">
        <div class="top-bar">
            <h1>Noticias</h1>
            <div class="breadcrumbs"><a href="{{ path('reto_aprender_admin') }}">Home</a> / <a href="{{ path('reto_aprender_admin_info') }}">Informacion Inicial</a></div>
        </div><br /><br />

        <div class="table">
            <img src="{{ asset("admin/img/bg-th-left.gif") }}" width="8" height="7" alt="" class="left" />
            <img src="{{ asset('admin/img/bg-th-right.gif') }}" width="7" height="7" alt="" class="right" />

            <form class="customForm" id="createForm" action="{{ path('reto_aprender_admin_news_update') }}" method="post" {{ form_enctype(form) }}>
                <input type="hidden" id="id" name="id" value="{{ entity.id }}">

                {{ form_errors(form) }}

                {{ form_widget(form._token) }}

                <table class="listing form" cellpadding="0" cellspacing="0">
                    <tr>
                        <th class="full" colspan="3">Editar Informacion</th>
                    </tr>
                    <tr>
                        <td class="first"  colspan="3"><strong>Contenido {{ form_errors(form.content) }}</strong></td>
                    </tr>
                    <tr>
                        <td class="first" colspan="3">
                            <textarea id="tecnotek_retoaprender_infoformtype_left" name="tecnotek_retoaprender_newsformtype[left]" rows="20" style="width: 600px;">
                                {{ entity.content }}
                            </textarea>
                        </td>
                    </tr>
                    <tr>
                        <td class="first" colspan="3">
                            <textarea id="tecnotek_retoaprender_infoformtype_center" name="tecnotek_retoaprender_newsformtype[center]" rows="20" style="width: 600px;">
                                {{ entity.content }}
                            </textarea>
                        </td>
                    </tr>
                    <tr>
                        <td class="first" colspan="3">
                            <textarea id="tecnotek_retoaprender_infoformtype_right" name="tecnotek_retoaprender_newsformtype[right]" rows="20" style="width: 600px;">
                                {{ entity.content }}
                            </textarea>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <button style="margin-left: 15px; margin-top: 0px;" type="submit" class="left btn save" name="save"><span></span>Guardar</button>
                        </td>
                    </tr>
                </table>
            </form>


            <p>&nbsp;</p>
        </div>
    </div>
{% endblock %}

{% block info %}
    Edite la informacion del inicio, mostrado en formato HTML.
{% endblock %}