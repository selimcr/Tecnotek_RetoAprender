{% extends 'RetoAprenderBundle:admin:layout.html.twig' %}

{% block extracss %}
    <link rel="stylesheet" href="{{ asset('admin/css/jHtmlArea.css') }}" type="text/css" media="all"/>
{% endblock %}

{% block extrajs %}

    <script src="{{ asset('js/tek_reto_admin_info.js') }}" type="text/javascript" charset="utf-8"></script>

    <script type="text/javascript">
        Tecnotek.module = "AdminInfo";
    </script>
{% endblock %}

{% block content %}
    <div id="center-column">
        <div class="top-bar">
            <h1>Informacion Inicial</h1>
            <div class="breadcrumbs"><a href="{{ path('reto_aprender_admin') }}">Home</a> / <a href="{{ path('reto_aprender_admin_info') }}">Informacion Inicial</a></div>
        </div><br /><br />

        <div class="table">
            <img src="{{ asset("admin/img/bg-th-left.gif") }}" width="8" height="7" alt="" class="left" />
            <img src="{{ asset('admin/img/bg-th-right.gif') }}" width="7" height="7" alt="" class="right" />

            <form class="customForm" id="createForm" action="{{ path('reto_aprender_admin_info_update') }}" method="post" {{ form_enctype(form) }}>
                <input type="hidden" id="id" name="id" value="{{ entity.id }}">

                {{ form_errors(form) }}

                {{ form_widget(form._token) }}

                <table class="listing form" cellpadding="0" cellspacing="0">
                    <tr>
                        <th class="full" colspan="3">Editar Informacion</th>
                    </tr>
                    <tr>
                        <td class="first"  colspan="3"><strong>Contenido</strong></td>
                    </tr>
                    <tr>
                        <td class="first" colspan="3">
                            <textarea id="tecnotek_retoaprender_infoformtype_leftSide" name="tecnotek_retoaprender_infoformtype[leftSide]" rows="20" style="width: 600px;">
                                {{ entity.leftSide }}
                            </textarea>
                        </td>
                    </tr>
                    <tr>
                        <td class="first" colspan="3">
                            <textarea id="tecnotek_retoaprender_infoformtype_centerSide" name="tecnotek_retoaprender_infoformtype[centerSide]" rows="20" style="width: 600px;">
                                {{ entity.centerSide }}
                            </textarea>
                        </td>
                    </tr>
                    <tr>
                        <td class="first" colspan="3">
                            <textarea id="tecnotek_retoaprender_infoformtype_rightSide" name="tecnotek_retoaprender_infoformtype[rightSide]" rows="20" style="width: 600px;">
                                {{ entity.rightSide }}
                            </textarea>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <button style="margin-left: 15px; margin-top: 0px;" type="submit" class="left btn save" name="save"><span></span>Guardar</button>
                        </td>
                    </tr>
                </table>
            </form>


            <p>&nbsp;</p>
        </div>
    </div>
{% endblock %}

{% block info %}
    Edite la informacion del inicio, mostrado en formato HTML.
{% endblock %}