{% extends 'RetoAprenderBundle:admin:layout.html.twig' %}

{% block content %}
<div id="center-column">
    <div class="top-bar">
        <a href="{{ path('reto_aprender_admin_news_new') }}" class="button">NUEVO </a>
        <h1>Noticias</h1>
        <div class="breadcrumbs"><a href="{{ path('reto_aprender_admin') }}">Home</a> / <a href="{{ path('reto_aprender_admin_news') }}">Noticias</a></div>
    </div><br /><br />
    <div class="table">
        <img src="{{ asset('admin/img/bg-th-left.gif')}}" width="8" height="7" alt="" class="left" />
        <img src="{{ asset('admin/img/bg-th-right.gif')}}" width="7" height="7" alt="" class="right" />
        <table class="listing" cellpadding="0" cellspacing="0">
            <tr>
                <th class="first" width="250px">T&iacute;tulo</th>
                <th>Creador</th>
                <th>Ult. Editor</th>
                <th>Fecha</th>
                <th>Habilitado</th>
                <th></th>
                <th class="last"></th>
            </tr>
            {% for new in news %}
            <tr {% if loop.index % 2 == 0 %}class="bg"{% endif %}>
                <td class="first style2"> {{ new }} </td>
                <td class="first style2"> {{ new.user }} </td>
                <td class="first style2"> {{ new.lastUserEditor }} </td>
                <td class="first style2"> {{ new.date|date('d-m-yy') }} </td>
                {% set status = new.enabled %}
                <td class="first style2">{% if new.enabled %} {{ 'boolean.afirmation.1'|trans }} {% else %} {{ 'boolean.afirmation.0'|trans }} {% endif %}</td>
                <td><a href="{{ path('reto_aprender_admin_news_edit', {'id': new.id}) }}"><img src="{{ asset('admin/img/edit-icon.gif') }}" width="16" height="16" alt="Editar" /></a></td>
                <td class="last">
                    <a href="{{ path('reto_aprender_admin_news_delete', {'id': new.id}) }}" onclick="return confirm('Esta seguro que desea eliminarlo?');">
                        <img src="{{ asset('admin/img/hr.gif') }}" width="16" height="16" alt="Eliminar" />
                    </a>
                </td>
            </tr>
            {% endfor %}
        </table>
        <div class="select">
            <strong>Other Pages: </strong>
            <select>
                <option>1</option>
            </select>
        </div>
    </div>
</div>
{% endblock %}

{% block info %}
Este m&oacute;dulo permite la edici&oacute;n y administraci&oacute;n de las noticias que se presentan en el sitio.
{% endblock %}